extends layout

block content

    - var _admin = ["Manage User Accounts", "Assign Roles", "Help Desk"];
    - var _finance = ["Finance Reports", "Accounts Payable", "Accounts Receiveable", "Tax"];
    - var _sales = ["Sales Reports", "Sales Leads", "Sales Demo"];
    - var _hr = ["New Hire On-boarding", "Benefits", "Payroll", "Off-boarding", "HR Reports"];
    - var _tech = ["Application Monitoring", "Tech Support", "App Development", "App Admin", "Release Management"];

    div(class="centered")
        h2= "Welcome " + `${name}` + "!"
        h3= "Role: " + `${role}`
        - var roles = `${role}`
        br
        br
        case roles
            when "ADMIN"
                //- for item in _admin
                //-     a(href="")= item
                a(href="/manageUsers") Manage User Accounts
                br
                br
                a(href="") Assign Roles
                br
                br
                a(href="") Help Desk
                br
                br
            when "FINANCE_ADMIN"
                for item in _finance
                    a(href="")= item
                    br
                    br
            when "SALES_ADMIN"
                for item in _sales
                    a(href="")= item
                    br
                    br
            when "HR_ADMIN"
                for item in _hr
                    a(href="")= item
                    br
                    br
            when "TECH_ADMIN"
                for item in _tech
                    a(href="")= item
                    br
                    br
        button(type="button" class="logout") 
            a(href="http://localhost:3000" class="buttonLink") Logout
