extends layout

block content
    -data = data || {}

    if errors
        ul
            for error in errors
                li= error.msg

    div(class="centered")  
        h2 Welcome to the ADMIN Portal!
        br
        br
        br
        p Created by: Alex Howell, Dana Dailey, and Ahmed Diefalla
        p COSC 4351
        br
        p(class="enterInstruc") Enter username and password below:   

        form(action="." method="POST")
            label(for="name") Username: 
            input(
                type="text"
                id="name"
                name="name"
                value = data.name
            )
            br
            br
            label(for="email") Password: 
            input(
                type="email"
                id="email"
                name="email"
                value = data.email
            )
            br
            br
            input(type="submit" value="Submit")