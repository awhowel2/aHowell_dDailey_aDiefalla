extends layout

block content
    -data = data || {}

    if errors
        ul
            for error in errors
                li= error.msg

    div(class="centered")  
        h2 Welcome to the ADMIN Portal!
        br
        br
        br
        p Created by: Alex Howell, Dana Dailey, and Ahmed Diefalla
        p COSC 4351
        br
        p(class="enterInstruc") Enter username and password below:   

        form(action="." method="POST")
            label(for="username") Username: 
            input(
                type="text"
                id="username"
                name="username"
                value = data.username
            )
            br
            br
            label(for="password") Password: 
            input(
                type="password"
                id="password"
                name="password"
                value = data.password
            )
            br
            br
            input(type="submit" value="Submit")